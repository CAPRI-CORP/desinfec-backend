// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         Int          @id @default(autoincrement())
  firstname                  String
  lastname                   String
  phone                      String       @unique
  email                      String       @unique
  password                   String
  recoveryPassword           String?      @unique
  recoveryPasswordValidation DateTime?
  createdAt                  DateTime     @default(now())
  updatedAt                  DateTime     @updatedAt
  Scheduling                 Scheduling[]

  @@map("users")
}

model Customer {
  id           Int          @id @default(autoincrement())
  firstname    String
  lastname     String
  phone        String       @unique
  email        String       @unique
  state        String
  city         String
  zipcode      String
  neighborhood String
  street       String
  number       String
  complement   String?
  reference    String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  Scheduling   Scheduling[]

  @@map("customers")
}

model Service {
  id               Int                @id @default(autoincrement())
  name             String             @unique
  cost             String
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  ScheduledService ScheduledService[]

  @@map("services")
}

model Scheduling {
  id               Int                @id @default(autoincrement())
  customerId       Int
  userId           Int
  observations     String?
  cost             String
  initialDate      DateTime
  finalDate        DateTime
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  Customer         Customer           @relation(fields: [customerId], references: [id])
  User             User               @relation(fields: [userId], references: [id])
  ScheduledService ScheduledService[]

  @@map("schedulings")
}

model ScheduledService {
  id           Int      @id @default(autoincrement())
  serviceId    Int
  schedulingId Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  Scheduling Scheduling @relation(fields: [schedulingId], references: [id])
  Service    Service    @relation(fields: [serviceId], references: [id])

  @@map("scheduled_services")
}

model Expenses {
  id        Int      @id @default(autoincrement())
  name      String
  cost      String
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("expenses")
}
